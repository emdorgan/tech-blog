<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>
<div class="row my-posts" id="current-post">
{{#each posts as |my_post|}}
  <div class ="row mb-4">
    <div class = "col md-5">
        <h2>
            {{!-- make into a link to the individual blogpost after testing --}}
            {{my_post.title}}
        </h2>
        <p>
            {{my_post.post_text}}
        </p>
        <p>
            Written by me on {{format_date my_post.date_created}}
        </p>
        <button class="btn btn-sm btn-warning" data-id="{{my_post.id}}" id="update">UPDATE</button>
        <button class="btn btn-sm btn-danger" data-id="{{my_post.id}}" id="delete">DELETE</button>


    </div>
  </div>
{{/each}}
</div>

<a href="/dashboard/new"><button type="button" class="btn btn-secondary">+ New Post</button></a>
<script src="/js/dashboard.js"></script>